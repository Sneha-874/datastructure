#include <stdio.h>

int linearSearch(int arr[], int begin, int end, int target) {
    if (begin > end) {
        return -1; // Base case: Element not found
    }

    if (arr[begin] == target) {
        return begin; // Element found at the current index
    }

    return linearSearch(arr, begin + 1, end, target); // Recursive call for the rest of the array
}

int main() {
    int size , num;
    printf("Enter the size of array:- ");
   scanf("%d" , &size);
   int arr[size];
   printf("Enter the elements of array:- \n");
   for(int i=0 ; i<size ; i++){
    scanf("%d" , &arr[i]);
   }
   printf("Enter the number to search:- ");
   scanf("%d" , &num);
   int result = linearSearch(arr ,0, size , num);


    if (result != -1) {
        printf("Element %d found at index %d.\n", num, result);
    } else {
        printf("Element %d not found in the array.\n", num);
    }

    return 0;
}
