//searching for value in linked list
#include<stdio.h>
#include<stdlib.h>
struct node
{
    int data;
    struct node* next;
};
void search(struct node *ptr , int num){
   while(ptr != NULL){
        if(ptr->data == num){
            printf("Number found!!");
            exit(1);
        }
        else{
            ptr = ptr->next;
        }
   }
   printf("Number not found!!");
}


int main()
{
    int num;
    printf("Enter number to be searched:- ");
    scanf("%d" , &num);
    struct node *ptr;
    struct node *start;
    struct node *second;
    struct node *third;
    struct node *fourth;
    start= (struct node*)malloc(sizeof(struct node));
    second = (struct node*)malloc(sizeof(struct node));
    third = (struct node*)malloc(sizeof(struct node));
    fourth = (struct node*)malloc(sizeof(struct node));
   start->data=7;
   start->next=second;
    second->data = 5;
    second->next = third;
    third->data = 12;
    third->next = fourth;
    fourth->data=56;
    fourth->next = NULL;
   ptr = start;
   search(ptr , num);
    
    return 0;
}
