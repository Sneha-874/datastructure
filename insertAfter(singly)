//Inserting a new node after a particular node
#include<stdio.h>
#include<stdlib.h>
struct node
{
    int data;
    struct node* next;
};
void insertAfter(struct node *ptr , int num , int insert_num){
    
   struct node *new_node;
   new_node = (struct node*)malloc(sizeof(struct node));
   new_node->data = insert_num;
   while(ptr->data!=num){
    ptr = ptr->next;
   }
   new_node->next = ptr->next;
   ptr->next = new_node;
}
void print(struct node*ptr){
    while(ptr!=NULL){
        printf("Element:- %d\t" , ptr->data);
        ptr = ptr->next;
    }
}
int main()
{
    int num , num1;
    struct node *ptr;
    struct node *start;
    struct node *second;
    struct node *third;
    struct node *fourth;
    start= (struct node*)malloc(sizeof(struct node));
    second = (struct node*)malloc(sizeof(struct node));
    third = (struct node*)malloc(sizeof(struct node));
    fourth = (struct node*)malloc(sizeof(struct node));
   start->data=7;
   start->next=second;
    second->data = 5;
    second->next = third;
    third->data = 12;
    third->next = fourth;
    fourth->data=56;
    fourth->next = NULL;
   ptr = start;
   printf("Linked list before insertion:-\n");
   print(ptr);
    printf("\nEnter number to be inserted :- ");
    scanf("%d" , &num1);
    printf("After which data value? :- ");
    scanf("%d" , &num);
   printf("\nLinked list after insertion:-\n");
   insertAfter(start , num , num1);
   print(ptr);
    return 0;
}
