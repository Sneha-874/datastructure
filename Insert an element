//Insertion of new element in an array at a particular position
#include<stdio.h>
#include<stdlib.h>
void print(int arr[] , int n){
    for(int i=0 ; i<n ; i++){
        printf("%d\t" , arr[i]);
    }
}
int main()
{
    int *arr;
    int n;
    printf("Enter the size of array:- ");
    scanf("%d" , &n);
    arr=(int *)malloc(n*sizeof(int));
    printf("Enter the elements of array:-\n");
    for(int i=0 ; i<n ; i++){
        scanf("%d" , &arr[i]);
    }
    printf("Array before insertion is :-\n");
    print(arr , n);
    int pos , num;
    printf("\nEnter the position and number which is to be inserted:-\n");
    scanf("%d%d" , &pos , &num);
    arr = (int *)realloc(arr , (n+1)*sizeof(int));
    for(int i=n+1; i>pos ; i--){
        arr[i] = arr[i-1];
    }
    arr[pos]=num;
    printf("Array after insertion is :-\n");
    print(arr , n+1);
    return 0;
}
Output:
Enter the elements of array:-
1
2
3
4
5
Array before insertion is :-
1       2       3       4       5
Enter the position and number which is to be inserted:-
2 6
Array after insertion is :-
1       2       6       3       4       5
